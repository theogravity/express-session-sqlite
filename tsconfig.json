{
  "compilerOptions": {
    "noImplicitAny": false,
    "strictNullChecks": false,
    "module": "commonjs",
    "target": "ES2019",
    "sourceMap": true,
    "moduleResolution": "node",
    "outDir": "build",
    "baseUrl": ".",
    "declaration": true,
    "lib": [
      "ES2019",
    ],
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/__tests__/*",
  ]
}
